<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- =================== -->
    <!-- SECURITY HEADERS    -->
    <!-- =================== -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
        <add name="Content-Security-Policy" value="default-src 'self'; style-src 'self'; script-src 'self'; img-src 'self' data:; font-src 'self' data:; object-src 'none'; frame-ancestors 'self'; frame-src 'self'; connect-src 'self' https://www.bankconfigurationportal.com;"/>
        <add name="Permissions-Policy" value="camera=(), microphone=(), geolocation=(), payment=()" />
      </customHeaders>
    </httpProtocol>

    <!-- =================== -->
    <!-- REMOVE SERVER INFO  -->
    <!-- =================== -->
    <security>
      <requestFiltering removeServerHeader="true" />
    </security>

  </system.webServer>
</configuration>
